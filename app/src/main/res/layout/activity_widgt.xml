<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <EditText
        android:background="@color/pink"
 android:layout_marginBottom="200dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

<com.demo.lixuan.mydemo.widgt.DivideButton
    android:id="@+id/bt_divideButton"
    android:layout_width="300dp"
    android:layout_height="60dp"/>
    <com.demo.lixuan.mydemo.widgt.ClickDivideButton
        android:id="@+id/bt_click_show"
        android:layout_marginTop="10dp"
        android:layout_width="300dp"
        android:layout_height="60dp"/>

    <com.demo.lixuan.mydemo.widgt.TextDivideButton
        android:id="@+id/bt_text_divid"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    <com.demo.lixuan.mydemo.widgt.TouchAndClickTestView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>