<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <EditText
        android:id="@+id/world_shopping_search_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

<com.demo.lixuan.mydemo.widgt.cludeCircleImage.KeywordsFlow
    android:id="@+id/keywordsflow"
    android:layout_width="match_parent"
    android:layout_height="400dp"></com.demo.lixuan.mydemo.widgt.cludeCircleImage.KeywordsFlow>

    <TextView
        android:padding="10dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/world_city_refresh"
        android:text="refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:padding="10dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/clear_history"
        android:text="clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>